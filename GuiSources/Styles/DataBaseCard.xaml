<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ListViewItem" x:Key="DataBaseCard">
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#5f5aa2"/>
            </Trigger>
        </Style.Triggers>

        <Setter Property="Background" Value="#355691"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="{TemplateBinding Background}"
                            Height="140"
                            Width="140"
                            CornerRadius="5"
                            Margin="5,5,5,5">

                        <StackPanel Orientation="Vertical"
                                    Margin="10,0,0,0">
                            
                            <Image Source=""
                                   Margin="0,10,0,0"
                                   Width="15"
                                   Height="15"/>
                            
                            <Label Content="{Binding DataBaseName}"
                                   Foreground="White"
                                   FontSize="12"/>
                            <Label Content="{Binding Status}"
                                    Foreground="Gray"
                                   FontSize="9"/>
                            <Label Content="{Binding DataBaseLastOpenDate}"
                                    Foreground="Gray"
                                   FontSize="9"/>
                            <Label Content="{Binding DataBaseCreateDate}"
                                    Foreground="Gray"
                                   FontSize="9"/>
                        </StackPanel>
                        
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>